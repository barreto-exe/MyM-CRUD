<Page
    x:Class="MyM_CRUD.View.PageEstadisticas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyM_CRUD.View"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Estadísticas"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="White">
        <StackPanel
            Width="auto"
            Height="auto"
            Margin="0,0,32,32"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom">
            <Button
                x:Name="BtnAdd"
                Cursor="Hand"
                Style="{StaticResource MaterialDesignFloatingActionAccentButton}">
                <md:PackIcon
                        Width="24"
                        Height="24"
                        Kind="Plus" />
            </Button>
        </StackPanel>
        <md:Card HorizontalAlignment="Left" Margin="10,308,0,0" VerticalAlignment="Top" Height="130" Width="200">
            <lvc:CartesianChart
            x:Name="cartesianChart1"
            Loaded="cartesianChart1_Loaded"
            Series="{Binding SeriesCollection}" Margin="10,20,10,10">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis ShowLabels="True">
                        <lvc:Axis.Separator>
                            <lvc:Separator IsEnabled="False" Step="1" />
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis ShowLabels="True">
                        <lvc:Axis.Separator>
                            <lvc:Separator IsEnabled="False" Step="1" />
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
